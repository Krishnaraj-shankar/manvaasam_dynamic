<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manvaasam</title>
    <link rel="shortcut icon" href="~/images/fav_icon.png" type="image/x-icon">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/manvaasam-sidebar.css")
    @Styles.Render("~/Content/style1.css")
    <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>
    <link href="~/assets/css/style.001.css" rel="stylesheet" />
    <link href="~/Content/style.css" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/1d62d9313d.js" crossorigin="anonymous"></script>

    <style>
        .sidebar a {
            color: #421519;
            font-weight: 700;
            box-sizing: border-box;
            transition-property: background;
            padding-left: 35px;
            text-decoration: none;
            
        }

        .sidebar-menu a:hover {
            background-color: #90d156;
            color: whitesmoke;
            border-radius: 5px;
            text-decoration: none;
            padding-left: 35px;
        }

        .active {
            background-color: #90d156;
            color: honeydew;
            text-decoration: none;
            border-radius: 5px;
        }
    </style>
</head>
<body>
    <input type="checkbox" id="nav-toggle">
    <div class="sidebar" style="background-color:#fff">
        <div class="sidebar-brand"></div>
        <div class="sidebar-menu">
            <ul class="nav-links">
                <li class="active list">
                        <a href="~/Views/Home/Home.cshtml">
                        <span class="fas fa-home icon"></span>
                        <span class="link_name">Home</span>
                    </a>
                </li>
                <li class="list">
                    <a href="#">
                        <span class='bx bx-collection icon'></span>
                        <span class="link_name">Products</span>
                    </a>
                </li>
                <li class="list">
                    <a href="#">
                        <span class="far fa-images icon"></span>
                        <span class="link_name">Gallery</span>
                    </a>
                </li>
                <li class="list">
                    <a href="#">
                        <span class="fas fa-book-reader icon"></span>
                        <span class="link_name">Courses</span>
                    </a>
                </li>
                <li class="list">
                    <a href="#">
                        <span class="fas fa-address-card icon"></span>
                        <span class="link_name">About us</span>
                    </a>
                </li>
                <li class="list">
                    <a href="#">
                        <span class='bx bx-cog icon'></span>
                        <span class="link_name">Logistics</span>
                    </a>
                </li>
                <li class="list">
                    <a href="#">
                        <span class='bx bxs-user-account icon'></span>
                        <span class="link_name">Login</span>
                    </a>
                </li>
                <li class="list">
                    <a href="#">
                        <span class="far fa-user-circle icon"></span>
                        <span class="link_name"> Profile</span>
                    </a>
                </li>
                <li class="list">
                    <a href="#">
                        <span class="fas fa-sign-out-alt icon"></span>
                        <span class="link_name"> Logout</span>
                    </a>
                </li>
            </ul>
        </div>
    </div>
    <div class="main-content">
        <header>
            <h1>
                <label for="nav-toggle">
                    <span class='bx bx-menu'></span>
                </label>
                <a href="#"><img src="~/image/manvasam_logo1.png" class="logo" width="150" height="48" /></a>
            </h1>
            <div class="menu-right">
                <span onclick="myFunction()" id="question">
                    @*<img src="https://img.icons8.com/bubbles/50/000000/question-mark.png" />*@
                    <img src="https://img.icons8.com/external-photo3ideastudio-flat-photo3ideastudio/25/000000/external-question-food-delivery-photo3ideastudio-flat-photo3ideastudio.png" />
                </span>
                <ul id="menu">
                    <li class="list">
                        <button class="btn btn-success joinus menu_items " id="joinus">
                            <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink"
                                 aria-hidden="true" focusable="false" width="1.5rem" height="1.5rem"
                                 viewBox="0 0 24 24">
                                <path d="M7.5 6.5C7.5 8.981 9.519 11 12 11s4.5-2.019 4.5-4.5S14.481 2 12 2S7.5 4.019 7.5 6.5zM20 21h1v-1c0-3.859-3.141-7-7-7h-4c-3.86 0-7 3.141-7 7v1h17z"
                                      fill="#fff" />
                            </svg>
                            Join with us
                        </button>
                    </li>
                    <li class="list">
                        <button class="btn btn-success  whatsapp menu_items " id="whatsapp">
                            <svg xmlns="http://www.w3.org/2000/svg" width="1.5rem" height="1.5rem"
                                 viewBox="0 0 448 512">
                                <path d="M380.9 97.1C339 55.1 283.2 32 223.9 32c-122.4 0-222 99.6-222 222c0 39.1 10.2 77.3 29.6 111L0 480l117.7-30.9c32.4 17.7 68.9 27 106.1 27h.1c122.3 0 224.1-99.6 224.1-222c0-59.3-25.2-115-67.1-157zm-157 341.6c-33.2 0-65.7-8.9-94-25.7l-6.7-4l-69.8 18.3L72 359.2l-4.4-7c-18.5-29.4-28.2-63.3-28.2-98.2c0-101.7 82.8-184.5 184.6-184.5c49.3 0 95.6 19.2 130.4 54.1c34.8 34.9 56.2 81.2 56.1 130.5c0 101.8-84.9 184.6-186.6 184.6zm101.2-138.2c-5.5-2.8-32.8-16.2-37.9-18c-5.1-1.9-8.8-2.8-12.5 2.8c-3.7 5.6-14.3 18-17.6 21.8c-3.2 3.7-6.5 4.2-12 1.4c-32.6-16.3-54-29.1-75.5-66c-5.7-9.8 5.7-9.1 16.3-30.3c1.8-3.7.9-6.9-.5-9.7c-1.4-2.8-12.5-30.1-17.1-41.2c-4.5-10.8-9.1-9.3-12.5-9.5c-3.2-.2-6.9-.2-10.6-.2c-3.7 0-9.7 1.4-14.8 6.9c-5.1 5.6-19.4 19-19.4 46.3c0 27.3 19.9 53.7 22.6 57.4c2.8 3.7 39.1 59.7 94.8 83.8c35.2 15.2 49 16.5 66.6 13.9c10.7-1.6 32.8-13.4 37.4-26.4c4.6-13 4.6-24.1 3.2-26.4c-1.3-2.5-5-3.9-10.5-6.6z"
                                      fill="#fff" />
                            </svg>
                            WhatsApp Group
                        </button>&nbsp;&nbsp;
                    </li>
                </ul>
            </div>

        </header>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required : false)
    @Scripts.Render("~/Scripts/sidebar.js")
</body>

</html>
